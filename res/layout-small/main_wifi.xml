<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="br.ufpr.ci317final.MainWifi" >

	<Button
	    android:id="@+id/wifiInfo"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:drawableStart="@drawable/wifi_logo"
	    android:drawableLeft="@drawable/wifi_logo"
	    android:gravity="center_horizontal|center_vertical"
	    android:onClick="wifiInfo" />
	   
    <Button
	       android:id="@+id/wifiLists"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:layout_weight="0.1"
	       android:gravity="center"
	       android:onClick="wifiLists"
	       android:text="@string/wifiLists" />
	
	<Button
	    android:id="@+id/wifiSave"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="0.1"
	    android:gravity="center"
	    android:onClick="wifiListSave"
	    android:text="@string/wifiSave" />

</LinearLayout>
